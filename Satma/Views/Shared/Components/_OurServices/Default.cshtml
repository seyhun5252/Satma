@using EntityLayer.Concrete
@model List<Service>

<div class="wrap services-wrap" id="services">
    <section class="grid grid-pad services">
        <h2>Servislerimiz</h2>
        @foreach (var item in Model)
        {
        <div class="col-1-4 service-box service-1">
            <div class="content">
                <div class="service-icon">
                    <i class="circle-icon icon-heart4"></i>
                </div>
                <div class="service-entry">
                    <h3>@item.ServiesTitle</h3>
                    <p>@item.ServiesDescription</p>
                    <a class="btn read-more" href="#0">Daha Fazla</a>
                </div>
            </div>
        </div>
        }
    </section>
</div>